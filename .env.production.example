# =============================================================================
# Tour Manager - Production Environment Variables
# =============================================================================
# INSTRUCTIONS:
# 1. Copier ce fichier vers .env.production
# 2. Remplacer toutes les valeurs CHANGE_ME
# 3. NE JAMAIS committer .env.production dans Git!
# =============================================================================

# Flask
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=8000

# =============================================================================
# SECURITE (OBLIGATOIRE)
# =============================================================================

# Generer une nouvelle cle avec:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_GENERATE_NEW_KEY

# =============================================================================
# BASE DE DONNEES
# =============================================================================

# Railway fournit automatiquement DATABASE_URL via ${{Postgres.DATABASE_URL}}
# Pour Docker Compose local:
# DATABASE_URL=postgresql://postgres:CHANGE_PASSWORD@db:5432/tour_manager
DATABASE_URL=CHANGE_ME

# =============================================================================
# REDIS (Cache + Rate Limiting)
# =============================================================================

# Railway fournit automatiquement REDIS_URL via ${{Redis.REDIS_URL}}
# Pour Docker Compose local:
# REDIS_URL=redis://redis:6379/0
REDIS_URL=CHANGE_ME

# Rate Limiting (utilise Redis)
RATELIMIT_STORAGE_URL=${REDIS_URL}

# Cache (utilise Redis)
CACHE_TYPE=RedisCache
CACHE_REDIS_URL=${REDIS_URL}

# =============================================================================
# EMAIL
# =============================================================================

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=CHANGE_ME
MAIL_PASSWORD=CHANGE_ME
MAIL_DEFAULT_SENDER=noreply@tourmanager.app

# =============================================================================
# APIS EXTERNES
# =============================================================================

# Geoapify - Autocomplete adresses internationales (3000 requetes/jour gratuit)
# Obtenir une cle: https://www.geoapify.com/
GEOAPIFY_API_KEY=CHANGE_ME

# =============================================================================
# RATE LIMITING
# =============================================================================

RATE_LIMIT_GLOBAL=100/minute
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
